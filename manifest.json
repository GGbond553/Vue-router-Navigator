{
  "manifest_version": 3,
  "name": "Vue-Router-Navigator",
  "version": "0.3.2",
  "description": "给本地开发环境提供一键式、可视化、可拖拽的 Vue-Router 导航与菜单预览工具",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "https://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "https://localhost/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*"
      ],
      "js": ["src/content/content.js"],
      "css": ["src/styles/styles.css"],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Vue-Router-Navigator"
  },
  "devtools_page": "src/devtools/devtools.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "styles/*"],
      "matches": ["<all_urls>"]
    }
  ]
}